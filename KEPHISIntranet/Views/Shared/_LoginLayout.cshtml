<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="keywords" content="KEPHIS, admin, login, dashboard" />
    <meta name="description" content="Login page for KEPHIS Intranet system" />
    <meta name="robots" content="noindex,nofollow" />
    <title>Authorization - KEPHIS | @ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/assets/images/favicon-32x32.png" />

    <!-- Custom Login Page CSS -->
    <link href="~/loginlayout/style.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js for IE8 support -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="main-wrapper" style="overflow: hidden;">
        <!-- Preloader -->
        <div class="preloader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
            </svg>
        </div>

        <div class="row auth-wrapper gx-0" style="padding: 25px;">
            <div class="page-content d-flex align-items-center justify-content-center w-100">
                <div class="row w-100 mx-0 auth-page">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Layout/loginlayout/jquery.min.js"></script>
    <script src="~/Layout/loginlayout/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector(".preloader")?.classList.add("d-none");

            // Bootstrap form validation
            (function () {
                'use strict';
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            })();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
