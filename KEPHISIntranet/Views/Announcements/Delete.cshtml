@model KEPHISIntranet.Models.Announcement

@{
    ViewData["Title"] = "Delete Announcement";
}

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">
            <i class="fa fa-exclamation-triangle me-2"></i> Confirm Delete
        </h4>
    </div>

    <div class="card-body">
        <p class="mb-4">Are you sure you want to delete this announcement?</p>

        <dl class="row">
            <dt class="col-sm-3 fw-semibold">Author</dt>
            <dd class="col-sm-9">@Model.CreatedBy</dd>

            <dt class="col-sm-3 fw-semibold">Announcement</dt>
            <dd class="col-sm-9">@Model.AnnouncementText</dd>

            <dt class="col-sm-3 fw-semibold">Date</dt>
            <dd class="col-sm-9">@Model.DateCreated.ToString("dd-MMM-yyyy hh:mm tt")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ID" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa fa-arrow-left me-1"></i> Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash me-1"></i> Yes, Delete
                </button>
            </div>
        </form>
    </div>
</div>
