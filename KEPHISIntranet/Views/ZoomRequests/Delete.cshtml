@model YourAppNamespace.Models.ZoomMeetingRequest

@{
    ViewData["Title"] = "Delete Zoom Request";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this Zoom request?</strong>
</div>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Model.StartTime</dd>

        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Model.EndTime</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">
        <i class="fa fa-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        Cancel
    </a>
</form>
