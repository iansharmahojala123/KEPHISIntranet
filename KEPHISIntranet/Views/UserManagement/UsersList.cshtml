@model List<(KEPHISIntranet.Models.ApplicationUser User, IList<string> Roles)>

@{
    ViewData["Title"] = "Users List";
    var userRole = User.FindFirst("role")?.Value;
    bool canManageUsers = userRole == "Admin" || userRole == "Communications";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">All Users</h2>
        @if (canManageUsers)
        {
            <a asp-action="CreateUser" class="btn btn-success">
                <i class="fa fa-plus"></i> Add New User
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No users found in the system.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Status</th>
                        @if (userRole == "Admin")
                        {
                            <th style="width: 220px;">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var isDisabled = item.User.LockoutEnd.HasValue && item.User.LockoutEnd > DateTimeOffset.UtcNow;
                        <tr>
                            <td>@item.User.UserName</td>
                            <td>@item.User.Email</td>
                            <td>
                                @if (item.Roles != null && item.Roles.Any())
                                {
                                    @string.Join(", ", item.Roles)
                                }
                                else
                                {
                                    <span class="text-muted">No Role Assigned</span>
                                }
                            </td>
                            <td>
                                @if (isDisabled)
                                {
                                    <span class="badge bg-danger">Disabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            @if (userRole == "Admin")
                            {
                                <td>
                                    <a asp-action="EditUser" asp-route-id="@item.User.Id" class="btn btn-sm btn-primary me-1">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>

                                    @if (isDisabled)
                                    {
                                        <form asp-action="EnableUser" asp-route-id="@item.User.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Re-enable this user?');">
                                                <i class="fa fa-check"></i> Enable
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="DisableUser" asp-route-id="@item.User.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Disable this user?');">
                                                <i class="fa fa-ban"></i> Disable
                                            </button>
                                        </form>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
