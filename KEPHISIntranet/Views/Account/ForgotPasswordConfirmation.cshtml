@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Reset Link Sent";
}

<div class="col-md-6 col-xl-6 mx-auto">
    <div class="card shadow-sm">
        <div class="card-body text-center p-4">
            <h4 class="fw-bold text-success mb-3">Password Reset Link Sent</h4>
            <p class="text-muted mb-4">
                If an account with the provided email exists, a password reset link has been sent.
                Please check your inbox.
            </p>
            <a asp-action="Login" asp-controller="Account" class="btn btn-success">Back to Login</a>
        </div>
    </div>
</div>
